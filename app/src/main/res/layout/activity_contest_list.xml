<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0057ff"
        android:orientation="horizontal"
        android:padding="1dp">

        <Button
            android:id="@+id/conBefore"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16.47dp"
            android:background="@drawable/detail_btn_back_white"
            android:layout_gravity="center_vertical" />

        <com.ourincheon.wazap.NotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="내가 쓴 공고"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2E8B57"
            android:visibility="invisible" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f3f3"
                android:orientation="horizontal"
                android:padding="1dp">

                <com.ourincheon.wazap.NotoTextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="지금까지 게시한 모집글을 확인하세요"
                    android:textColor="#0057ff"
                    android:textSize="13dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ListView
                android:id="@+id/contestlistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
</LinearLayout>