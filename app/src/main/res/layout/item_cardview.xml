<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="0.5sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:text="3"
                        android:textColor="#0057ff"
                        android:textSize="44dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/recruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="/5"
                        android:textColor="#000000"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="26.67dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="#000000"
                    android:layout_marginTop="7.33dp">


                </LinearLayout>

                <com.ourincheon.wazap.NotoTextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:text="D - 0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.63"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:id="@+id/imageView1"
                        android:background="#0057ff"
                        android:layout_marginRight="8.33dp"
                        android:layout_marginTop="2dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="디자인"
                        android:singleLine="true"
                        android:id="@+id/category1"
                        android:layout_marginRight="13dp"
                        android:textSize="13dp"
                        android:textColor="#0057ff" />

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:id="@+id/imageView2"
                        android:layout_marginRight="8.33dp"
                        android:layout_marginTop="2dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"
                        android:id="@+id/category2"
                        android:textSize="13dp"
                        android:textColor="#0057ff" />
                </LinearLayout>

                <com.ourincheon.wazap.NotoTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ddd"
                    android:textIsSelectable="false"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:id="@+id/imageView14"
                        android:background="#727272"
                        android:layout_marginRight="7.67dp"
                        android:layout_marginTop="2dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textColor="#727272"
                        android:singleLine="true"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="7.33dp"
                        android:layout_height="10dp"
                        android:id="@+id/imageView15"
                        android:background="@drawable/location_icon"
                        android:layout_marginRight="8.33dp"
                        android:layout_marginTop="5dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="서울"
                        android:textSize="14dp"
                        android:textColor="#727272" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:id="@+id/imageView16"
                        android:background="@drawable/person_icon"
                        android:layout_marginRight="7.67dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오이담"
                        android:textColor="#727272"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/hbutton"
                    android:layout_width="26.67dp"
                    android:layout_height="24.67dp"
                    android:layout_marginTop="38dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="11.67dp"
                    android:background="@drawable/heart1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>